---
import '../styles/global.css';

const features = [
  {
    title: "植物販売",
    description: "観葉植物から園芸用品まで幅広く取り扱っています",
    icon: "🌿"
  },
  {
    title: "ガーデニング相談",
    description: "経験豊富なスタッフが丁寧にアドバイスいたします",
    icon: "💭"
  },
  {
    title: "メンテナンスサービス",
    description: "定期的な植物のお手入れやガーデニングのサポートを提供",
    icon: "🔧"
  },
  {
    title: "ワークショップ",
    description: "初心者向けの寄せ植え教室や季節のイベントを開催",
    icon: "📚"
  }
];


const categories = [
  {
    name: "観葉植物",
    image: "images/indoor-plants.jpg",
    description: "室内を彩る観葉植物各種"
  },
  {
    name: "ガーデニング用品",
    image: "images/gardening-tools.jpg",
    description: "プロ仕様の園芸用品"
  },
  {
    name: "季節の花々",
    image: "images/seasonal-flowers.jpg",
    description: "四季折々の花を取り揃え"
  }
];
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>グリーンガーデン | 植物と暮らしを楽しむ園芸店</title>
    <meta name="description" content="観葉植物、園芸用品の販売からガーデニングのアドバイスまで、植物のある暮らしをサポートする園芸店です。" />
  </head>
  <body class="bg-white">
    <!-- ヒーローセクション -->
    <header class="relative h-[40vh]">
      <div class="absolute inset-0 bg-garden-green/40"></div>
      <div class="relative h-full flex items-center justify-center text-white text-center px-4">
        <div>
          <h1 class="text-5xl md:text-7xl font-bold mb-4">グリーンガーデン</h1>
          <p class="text-xl md:text-2xl mb-8">植物と暮らしを楽しむ園芸店</p>
          <a href="#contact" class="bg-garden-accent text-garden-green font-bold py-3 px-8 rounded-full hover:bg-garden-light transition duration-300">
            お問い合わせ
          </a>
        </div>
      </div>
    </header>

	<!-- SNSリンク -->
	<div class="bg-gray-50 py-12">
		<div class="container mx-auto px-4">
			<h2 class="text-2xl font-bold text-garden-green text-center mb-8">SNSもチェック</h2>
			<div class="flex justify-center items-center space-x-12">
				<a href="https://www.instagram.com/kazuma_diy58/" target="_blank" rel="noopener noreferrer" 
					class="group flex flex-col items-center text-garden-green hover:text-garden-accent transition-colors duration-300">
					<div class="p-6 rounded-full shadow-md group-hover:shadow-lg transition-shadow duration-300">
						<svg class="w-12 h-12" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072C2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12s.014 3.668.072 4.948c.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24s3.668-.014 4.948-.072c4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
						</svg>
					</div>
				</a>
				<a href="https://x.com/kazuma_diy58" target="_blank" rel="noopener noreferrer" 
					class="group flex flex-col items-center text-garden-green hover:text-garden-accent transition-colors duration-300">
					<div class="p-6 rounded-full shadow-md group-hover:shadow-lg transition-shadow duration-300">
						<svg class="w-12 h-12" viewBox="0 0 24 24" fill="currentColor">
							<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
						</svg>
					</div>
				</a>
			</div>
		</div>
	</div>

    <!-- 特徴セクション -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-garden-green mb-12">私たちのサービス</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {features.map(feature => (
            <div class="text-center p-6 rounded-lg bg-gray-50">
              <div class="text-4xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-bold text-garden-green mb-2">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 商品カテゴリー -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-garden-green mb-12">商品カテゴリー</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {categories.map(category => (
            <div class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform duration-300 hover:scale-105">
              <div class="h-48 relative">
                <img
                  src={category.image}
                  alt={category.name}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-garden-green mb-2">{category.name}</h3>
                <p class="text-gray-600">{category.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- お問い合わせセクション -->
    <section id="contact" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-garden-green mb-12">お問い合わせ</h2>
        <div class="max-w-2xl mx-auto text-center">
          <p class="text-xl mb-8">
            お気軽にお問い合わせください
          </p>
          <div class="mx-auto mb-12 w-[640px] max-w-full">
            <iframe 
              src="https://docs.google.com/forms/d/e/1FAIpQLSfd7_PDp8NcCr5nXAQz__rNa_p4uGWUWzt5owV3sCOh2SVGIQ/viewform?embedded=true" 
              width="100%"
              height="1100"
              frameborder="0" 
              marginheight="0" 
              marginwidth="0">
              読み込んでいます...
            </iframe>
          </div>
          <div class="space-y-4">
            <p class="text-lg">
              <span class="font-bold">住所：</span> 〒123-4567 東京都○○区△△ 1-2-3
            </p>
            <p class="text-lg">
              <span class="font-bold">電話：</span> 03-1234-5678
            </p>
            <p class="text-lg">
              <span class="font-bold">営業時間：</span> 10:00 - 18:00（水曜定休）
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- フッター -->
    <footer class="bg-garden-green text-white py-8">
      <div class="container mx-auto px-4 text-center">
        <p>&copy; 2025 グリーンガーデン All Rights Reserved.</p>
      </div>
    </footer>
  </body>
</html>
